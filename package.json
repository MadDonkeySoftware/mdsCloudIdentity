{
  "name": "mds-cloud-identity",
  "version": "1.0.0",
  "description": "A simple Identity and Access Management service",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf ./dist",
    "dev": "concurrently -c green,blue -n server,db \"wait-on tcp:27017 && npm run dev:server\" \"docker compose down -v && docker compose up -V\"",
    "dev:server": "NODE_ENV=localdev ts-node-dev --respawn --pretty --transpile-only ./src/server.ts",
    "test": "NODE_ENV=test jest",
    "test:cov": "NODE_ENV=test jest --coverage",
    "test:cov:watch": "npm run test:watch:cov",
    "test:watch": "NODE_ENV=test jest --watch",
    "test:watch:cov": "NODE_ENV=test jest --watchAll --coverage",
    "lint": "eslint 'src/**'",
    "pretty:check": "prettier -c ./src",
    "pretty": "prettier -w ./src",
    "format": "npm run pretty",
    "prebuild": "npm run clean",
    "prepublish:setup": "npm run clean && npm run build && node dist/setup-package.js && rimraf ./dist/setup-package.js ./dist/setup-package.d.ts",
    "publish:setup": "echo 'ready to publish from dist folder!'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MadDonkeySoftware/mdsCloudIdentity.git"
  },
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MadDonkeySoftware/mdsCloudIdentity/issues"
  },
  "homepage": "https://github.com/MadDonkeySoftware/mdsCloudIdentity#readme",
  "dependencies": {
    "@fastify/type-provider-typebox": "^2.3.0",
    "@sinclair/typebox": "^0.24.44",
    "@tsconfig/node18": "^1.0.1",
    "bcryptjs": "^2.4.3",
    "config": "^3.3.8",
    "fastify": "^4.7.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongodb": "^4.10.0",
    "netmask": "^2.0.2",
    "nodemailer": "^6.8.0"
  },
  "devDependencies": {
    "@jest/reporters": "^29.1.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/bunyan": "^1.8.8",
    "@types/config": "^3.3.0",
    "@types/jest": "^29.1.1",
    "@types/jsonwebtoken": "^8.5.9",
    "@types/lodash": "^4.14.186",
    "@types/mock-require": "^2.0.1",
    "@types/netmask": "^1.0.30",
    "@types/nodemailer": "^6.4.6",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.39.0",
    "@typescript-eslint/parser": "^5.39.0",
    "concurrently": "^7.4.0",
    "eslint": "^8.28.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^27.1.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.1.2",
    "pino-pretty": "^9.1.1",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.8.4",
    "wait-on": "^6.0.1"
  },
  "optionalDependencies": {
    "mds-log-pump": "^0.0.5"
  }
}
